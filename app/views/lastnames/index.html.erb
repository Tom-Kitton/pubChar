<p id="notice"><%= notice %></p>

<h1>Lastnames</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lastnames.each do |lastname| %>
      <tr>
        <td><%= lastname.content %></td>
        <td><%= link_to 'Show', lastname %></td>
        <td><%= link_to 'Edit', edit_lastname_path(lastname) %></td>
        <td><%= link_to 'Destroy', lastname, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lastname', new_lastname_path %>
