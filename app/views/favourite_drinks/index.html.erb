<p id="notice"><%= notice %></p>

<h1>Favourite Drinks</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favourite_drinks.each do |favourite_drink| %>
      <tr>
        <td><%= favourite_drink.content %></td>
        <td><%= link_to 'Show', favourite_drink %></td>
        <td><%= link_to 'Edit', edit_favourite_drink_path(favourite_drink) %></td>
        <td><%= link_to 'Destroy', favourite_drink, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

